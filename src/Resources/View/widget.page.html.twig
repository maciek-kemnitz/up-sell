<script type="text/javascript">
    $(function(){

        var screenWidth = $(window).width();
        var modalWidth = screenWidth * 0.8;
        var paddingLeft = 40;

        if (modalWidth > 900)
        {
            modalWidth = 900;
        }

        var modalLeftMargin = (screenWidth - modalWidth)/2 - paddingLeft;

        $('#up-sell-modal').css('margin-left', modalLeftMargin + 'px');
    });




</script>

