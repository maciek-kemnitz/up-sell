<style>

    .muted {
        color: #8b9ba1;
    }

    .pull-right {
        float: right;
    }

    .btn-up-black {
        -moz-border-radius: 2px;
        -moz-box-shadow: #090808 0px 0px 0px;
        -moz-transition: all 0.5s ease;
        -ms-transition: all 0.5s ease;
        -o-transition: all 0.5s ease;
        -webkit-border-radius: 5px;
        -webkit-box-shadow: #6E7849 0 0 10px;
        -webkit-transition: all 0.5s ease;
        background-color: #090808;
        border-radius: 2px;
        border: 0px solid #090808;
        box-shadow: #090808 0px 0px 0px;
        color: #ffffff;
        display: inline-block;

        margin: auto;
        padding: 8px 17px;
        text-decoration: none;
        text-shadow: #000000 5px 5px 15px;
        transition: all 0.5s ease;
        cursor: pointer;
        font-weight: bold;
        font-size: 15px;
    }

    .btn-up-black:hover {
        opacity: 0.9;
    }

    .btn-up-gray {
        -moz-border-radius: 2px;
        -moz-box-shadow: #090808 0px 0px 0px;
        -moz-transition: all 0.5s ease;
        -ms-transition: all 0.5s ease;
        -o-transition: all 0.5s ease;
        -webkit-border-radius: 5px;
        -webkit-box-shadow: #6E7849 0 0 10px;
        -webkit-transition: all 0.5s ease;
        background-color: #999999;
        border-radius: 2px;
        border: 0px solid #090808;
        box-shadow: #090808 0px 0px 0px;
        color: #ffffff;
        display: inline-block;

        margin: auto;
        padding: 8px 17px;
        text-decoration: none;
        transition: all 0.5s ease;
        cursor: pointer;
        font-weight: bold;
        font-size: 15px;
    }

    .btn-up-gray:hover {
        opacity: 0.9;
    }




    #up-sell-modal {
        font-family: helvetica;
        letter-spacing: -1px;
    }

    /*.modal-body {*/
        /*overflow: hidden !important;*/
    /*}*/

    /*.modal-body div {*/
        /*overflow: hidden;*/
    /*}*/

    .up-sell-content-inner {
        margin-top: 63px;
    }

    /*.up-sell-heading {*/
        /*margin-bottom: 63px;*/
    /*}*/

    .up-sell-heading h1 {
        margin-top: 0px;
        margin-bottom: 5px;

    }

    .clearfix{
        *zoom:1;
    }
    .clearfix:before, .clearfix:after {
        display:table;
        content:"";
        line-height:0;
    }
    .clearfix:after {
        clear:both;
    }

    .up-sell-img {
        float: left;
        margin-left: 25px;
    }

    .up-sell-description-container {
        margin-left: 305px;
    }

    .product-name {
        margin-bottom: 10px;
        margin-top: 0px;
        padding-top: 10px;
    }

    del {
        font-size: 18px;
        font-weight: bold;
        display: block;
    }

    .up-price {
        margin: 15px 0;
    }

    .up-price h2 {
        margin: 0;
    }

    .up-sell-bottom {
        padding-top: 15px;
        margin-top: 50px;
        /*width: 100%;*/
        border-top: solid 1px #CCCCCC;
    }

    .to-basket {
        margin-right: 5px;
        font-size: 12px;
        cursor: pointer;
    }

    .modal {
        position: fixed;
        top: 5%;
        /*left: 10%;*/
        max-width: 900px;
        z-index: 1050;
        /*width: 560px;*/
        /*width: 800px;*/
        width: 80%;
        /*height: 80%;*/
        /*margin-left: -280px;*/
        /*margin-left: -335px;*/
        background-color: #ffffff;
        border: 1px solid #999;
        border: 1px solid rgba(0, 0, 0, 0.3);
        *border: 1px solid #999;
        -webkit-border-radius: 6px;
        -moz-border-radius: 6px;
        border-radius: 6px;
        outline: none;
        -webkit-box-shadow: 0 3px 7px rgba(0, 0, 0, 0.3);
        -moz-box-shadow: 0 3px 7px rgba(0, 0, 0, 0.3);
        box-shadow: 0 3px 7px rgba(0, 0, 0, 0.3);
        -webkit-background-clip: padding-box;
        -moz-background-clip: padding-box;
        background-clip: padding-box;
        padding: 20px 40px;
    }

    .modal.fade {
        top: -25%;
        -webkit-transition: opacity 0.3s linear, top 0.3s ease-out;
        -moz-transition: opacity 0.3s linear, top 0.3s ease-out;
        -o-transition: opacity 0.3s linear, top 0.3s ease-out;
        transition: opacity 0.3s linear, top 0.3s ease-out;
    }

    .modal.fade.in {
        top: 6%;
    }

    .modal-header {
        padding-top: 20px;
        /*border-bottom: 1px solid #eee;*/
    }


    /*.modal-header h3 {*/
        /*margin: 0;*/
        /*line-height: 30px;*/
    /*}*/

    .modal-body {
        position: relative;
        max-height: 400px;

        overflow-y: auto;
    }

    .modal-form {
        margin-bottom: 0;
    }

    .modal-footer {
        padding: 14px 15px 15px;
        margin-bottom: 0;
        text-align: right;
        background-color: #f5f5f5;
        border-top: 1px solid #ddd;
        -webkit-border-radius: 0 0 6px 6px;
        -moz-border-radius: 0 0 6px 6px;
        border-radius: 0 0 6px 6px;
        *zoom: 1;
        -webkit-box-shadow: inset 0 1px 0 #ffffff;
        -moz-box-shadow: inset 0 1px 0 #ffffff;
        box-shadow: inset 0 1px 0 #ffffff;
    }

    .modal-footer:before,
    .modal-footer:after {
        display: table;
        line-height: 0;
        content: "";
    }

    .modal-footer:after {
        clear: both;
    }

    .modal-footer .btn + .btn {
        margin-bottom: 0;
        margin-left: 5px;
    }

    .modal-footer .btn-group .btn + .btn {
        margin-left: -1px;
    }

    .modal-footer .btn-block + .btn-block {
        margin-left: 0;
    }

    .modal-backdrop {
        position: fixed;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        z-index: 1040;
        background-color: #B2B2B2;
    }

    .modal-backdrop.fade {
        opacity: 0;
    }

    .modal-backdrop,
    .modal-backdrop.fade.in {
        opacity: 0.8;
        filter: alpha(opacity=80);
    }

    .up-sell-multi {
        margin: 30px auto;
        text-align: center;
        padding: 0;
        margin: 30px 0 0 0;
        /*width: 60%;*/

    }

    .up-sell-multi .up-sell-description-container {
        text-align: center;
        margin: 10px 0 0 0;
    }

    .up-sell-multi del {
        display: inline;
        margin-right: 10px;
    }

    .multi-item {
        text-align: center;
        display: inline-block;
        width: 30%;
        /*float: left;*/
        /*margin: 0 50px;*/
    }

    .multi-item .product-name {
        font-weight: bold;
        font-size: 16px;
    }

    .multi-item select {
        display: block;
        margin: 10px auto;
    }

    .up-sell-img img {
        max-width: 240px;
        max-height: 280px;
    }

    .multi-item img {
        max-width: 180px;
        max-height: 210px;
    }


</style>
<div id="up-sell-modal" class="modal hide fade in">
    <div class="modal-header">
        <div class="up-sell-heading">
            <h1>{{ upSell.getHeadline() }}</h1>
            <small>{{ upSell.getDescription() }}</small>
        </div>
    </div>
    <div class="modal-body">
        <div class="up-sell-content clearfix">
            {% if products.count() > 1 %}
                <ul class="up-sell-multi">
                {% for product in products %}
                    <li class="multi-item">
                        <div >
                            <img  src="{{ product.getImgUrl() }}"/>
                        </div>
                        <div class="up-sell-description-container">
                                <span class="product-name">
                                {{ product.getName()|length > 70 ? product.getName()|slice(0, 70) ~ '...' : product.getName()  }}
                            </span>

                            <div class="up-price">
                                <h2>{{ product.getOriginalPrice|number_format(2, '.', ',') }} zł</h2>
                            </div>

                            {% if product.getId() in variants|keys and variants[product.getId()] is not null %}
                                <select name="variant-id" id="variant-select">
                                    {% for key, variant in variants[product.getId()] %}
                                        {% if loop.first %}
                                            <option value="{{ key }}" selected>{{ variant }}</option>
                                        {% else %}
                                            <option value="{{ key }}">{{ variant }}</option>
                                        {% endif %}
                                    {% endfor %}
                                </select>
                            {% endif %}
                            <button class="btn-up-black up-sell-add-to-cart" data-product-id="{{ product.getShoploProductId() }}">Do koszyka</button>
                        </div>
                    </li>
                {% endfor %}
                </ul>
            {% else %}
                {% for product in products %}
                <div class="up-sell-content-inner">
                    <div class="up-sell-img">
                        <img src="{{ product.getImgUrl() }}"/>
                    </div>
                    <div class="up-sell-description-container">
                        <h2 class=" product-name">
                            {{ product.getName()|length > 70 ? product.getName()|slice(0, 70) ~ '...' : product.getName()  }}
                        </h2>
                        <small class="muted">
                            {% if product.getDescription() != null %}
                                {{ product.getDescription()|length > 200 ? product.getDescription()|slice(0, 200) ~ '...' : product.getDescription()  }}
                            {% endif %}
                        </small>
                        <div class="up-price">
                            <h2>{{ product.getOriginalPrice|number_format(2, '.', ',') }} zł</h2>
                        </div>

                        <button class="btn-up-black up-sell-add-to-cart" data-product-id="{{ product.getShoploProductId() }}">Do koszyka</button>
                        {% if product.getId() in variants|keys and variants[product.getId()] is not null %}
                            <select name="variant-id" id="variant-select">
                                {% for key, variant in variants[product.getId()] %}
                                    {% if loop.first %}
                                        <option value="{{ key }}" selected>{{ variant }}</option>
                                    {% else %}
                                        <option value="{{ key }}">{{ variant }}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        {% endif %}

                    </div>
                </div>
                {% endfor %}
            {% endif %}
        </div>

    </div>
    <div class="up-sell-bottom clearfix">
        <div class="pull-right">
            <span class="muted to-basket" data-dismiss="modal">Przejdź od razu do koszyka »</span>
            <button class="btn-up-gray" data-dismiss="modal">Nie dziękuję!</button>
        </div>
    </div>
</div>
